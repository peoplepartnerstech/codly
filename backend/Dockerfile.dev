# Development Dockerfile
FROM rust:latest

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy manifest files first (for better caching)
COPY Cargo.toml ./

# Copy source code
COPY src ./src

# Expose port
EXPOSE 3000

# Run the application
CMD ["cargo", "run"]
